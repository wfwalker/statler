<div class='row'>
	<div class='col-md-12'>
		<p id="notice"><%= notice %></p>

		<h2><%= @artist.name %></h2>

		<ul class='list-group'>
		<% @artist.performances.each { | performance | %>
			<li class='list-group-item'>
				<%= link_to performance.role.name, performance.role %> in
				<%= link_to performance.run.play.title, performance.run.play %>,
				<%= link_to performance.run.venue.name, performance.run.venue %>,
				<%= link_to performance.run.year, performance.run %>

				<% if (performance.photo) then %>
					<div><%= image_tag(performance.photo.url, :width => 320) %></div>
				<% end %>
			</li>
		<% } %>
		</ul>

		<ol class='breadcrumb'>
			<li><%= link_to 'Edit', edit_artist_path(@artist) %></li>
			<li><%= link_to 'Back', artists_path %></li>
		</ol>

	</div>
</div>