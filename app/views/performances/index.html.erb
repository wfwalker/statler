<h1>Performances</h1>

<table class='table table-striped'>
  <tr>
    <th>Artist</th>
    <th>Run</th>
    <th>Role</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @performances.each do |performance| %>
  <tr>
    <td><%= link_to performance.artist.name, performance.artist %></td>
    <td><%= link_to performance.run.year, performance.run %> <%= link_to performance.run.venue.name, performance.run.venue %></td>
    <td><%= link_to performance.role.name, performance.role %> in <%= link_to performance.run.play.title, performance.run.play %></td>
    <td><%= link_to 'Edit', edit_performance_path(performance) %></td>
    <td><%= link_to 'Destroy', performance, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

