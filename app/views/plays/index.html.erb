<h1>Listing plays</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Premiere year</th>
    <th>Playwright</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @plays.each do |play| %>
  <tr>
    <td><%= link_to play.title, play %></td>
    <td><%= play.premiere_year %></td>
    <td><%= link_to play.playwright.name, play.playwright %></td>
    <td><%= link_to 'Show', play %></td>
    <td><%= link_to 'Edit', edit_play_path(play) %></td>
    <td><%= link_to 'Destroy', play, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

